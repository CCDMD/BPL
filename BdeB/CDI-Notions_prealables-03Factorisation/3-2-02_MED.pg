########################################
#  Initialization
#

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

#######################################
#  Set-up

#Mise en évidence double:  (x+a)(y+b) = xy + ax + by + ab


Context("Numeric");
Context()->variables->are(x=>"Real",y=>"Real");

$a = non_zero_random(-10,10,1);
$b = non_zero_random(-10,10,1);

$expression = Compute("x*y + $a*x + $b*y + $a*$b")->reduce();

$fac1 = Formula("(x + $b)")->reduce();
$fac2 = Formula("(y + $a)")->reduce();

$multians = MultiAnswer($fac1, $fac2)->with(
  singleResult => 0,
  allowBlankAnswers => 1,
  checker => sub {
      my ( $correct, $student, $self ) = @_;
      my ( $f1stu, $f2stu ) = @{$student};
      my ( $f1, $f2 ) = @{$correct};
      if ( ($f1 == $f1stu && $f2 == $f2stu) ||
           ($f1 == $f2stu && $f2 == $f1stu) ) {
          return [1,1];
      } else {
          if ($f1 == $f1stu || $f2 == $f1stu) {
              return [1,0];
          } elsif ($f1 == $f2stu || $f2 == $f2stu) {
              return [0,1];
          } else {
              return [0,0];
          }
      }
  }
);



################################################
#  Main text


Context()->texStrings;
BEGIN_TEXT

Factoriser l'expression \($expression\).
$BR
$BR
\( \big( \)
\{ $multians->ans_rule(10) \}
\( \big) \big( \)
\{ $multians->ans_rule(10) \}
\( \big) \)
$HR
$BITALIC
Un exemple similaire est présenté à la page \{ htmlLink( "http://moodle.bdeb.qc.ca/mod/page/view.php?id=2314", "1.2.2.", "TARGET='_blank'" ) \} de la Plateforme d'aide en mathématiques.
$EITALIC

END_TEXT
Context()->normalStrings;


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($multians->cmp());

$c = $a*$b;

Context()->texStrings;
BEGIN_SOLUTION

Le polynôme \($expression\) se factorise par une mise en évidence double.
$BR
$BR
\[
\begin{array}{rl}  $expression &=\underbrace{xy + $a x} + \underbrace{$b y + $c} \\[0.5em] &=  x(y+$a) + $b(y+$a)   \\[0.5em]  &= (x + $b)(y + $a)  \end{array}
\]
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();