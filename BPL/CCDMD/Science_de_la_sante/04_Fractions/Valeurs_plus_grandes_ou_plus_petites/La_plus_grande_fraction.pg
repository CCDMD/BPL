# cr&eacute;er trois fractions diff&eacute;rentes et trouver le r&eacute;sultat de leur division, &agrave; trois d&eacute;cimales pr&egrave;s
$aden=random(2,9);
$anum=random(1,$aden-1);
$a=(int($anum/$aden*1000))/1000;
$bden=random(2,9);
$bnum=random(1,$bden-1);

while ($anum/$aden == $bnum/$bden)
  {
    $bden=random(2,9);
    $bnum=random(1,$bden-1);
  }
$b=(int($bnum/$bden*1000))/1000;


$cden=random(2,9);
$cnum=random(1,$cden-1);

while ($cnum/$cden == $bnum/$bden || $cnum/$cden == $anum/$aden)
  {
    $cden=random(2,9);
    $cnum=random(1,$cden-1);
  }
$c=(int($cnum/$cden*1000))/1000;

# d&eacute;terminer laquelle des trois fractions est la plus grande entre a, b et c

if ($a>$b && $a>$c)
  {
    $reponsenum=$anum;
    $reponseden=$aden;
    $reponse=$a;
  }
elsif ($b>$a && $b>$c)
  {
    $reponsenum=$bnum;
    $reponseden=$bden;
    $reponse=$b;
  }
else
  {
    $reponsenum=$cnum;
    $reponseden=$cden;
    $reponse=$c;
  }


# assigner chacun de ces trois nombres d&eacute;cimaux &agrave; c&ocirc;t&eacute; d'un bouton radio &agrave; choisir en choix de r&eacute;ponse
$radio = RadioButtons(["$anum/$aden","$bnum/$bden","$cnum/$cden"],"$reponsenum/$reponseden",);




