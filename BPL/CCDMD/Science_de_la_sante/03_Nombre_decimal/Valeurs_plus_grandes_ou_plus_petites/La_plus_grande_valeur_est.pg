# cr&eacute;er trois nombres d&eacute;cimaux ayant la m&ecirc;me partie enti&egrave;re mais une partie d&eacute;cimale diff&eacute;rente
$entier=random(0,100);
$adec=random(10,99);
$bdec=random(10,99);
while ($bdec==$adec)
  {$bdec=random(10,99);}
$cdec=random(10,99);
while ($cdec==$adec)
 {
  $cdec=random(10,99);
  while ($cdec==$bdec)
    {$cdec=random(10,99);}
 }

$a=($entier.".".$adec);
$b=($entier.".".$bdec);
$c=($entier.".".$cdec);

# d&eacute;terminer lequel des trois nombres d&eacute;cimaux est le plus grand entre a, b et c,
# et d&eacute;terminer lesquels ont les plus grandes d&eacute;cimales, ainsi que les plus petites
if ($a>$b && $a>$c)
  {
    $reponse=$a;
    $rep1=$adec;
    if ($b>$c)
      {
        $rep2=$bdec;
        $rep3=$cdec;
      }
    else 
      {
        $rep2=$cdec;
        $rep3=$bdec;}
  }
elsif ($b>$a && $b>$c)
  {
    $reponse=$b;
    $rep1=$bdec;
    if ($a>$c)
      {
        $rep2=$adec;
        $rep3=$cdec;
      }
    else 
      {
        $rep2=$cdec;
        $rep3=$adec;
      }
  }
else
  {
    $reponse=$c;
    $rep1=$cdec;
    if ($a>$b)
      {
        $rep2=$adec;
        $rep3=$bdec;
      }
    else 
      {
        $rep2=$bdec;
        $rep3=$adec;
      }
  }

# assigner chacun de ces trois nombres d&eacute;cimaux &agrave; c&ocirc;t&eacute; d'un bouton radio &agrave; choisir en choix de r&eacute;ponse
$radio = RadioButtons(["$a","$b","$c"],"$reponse",);


