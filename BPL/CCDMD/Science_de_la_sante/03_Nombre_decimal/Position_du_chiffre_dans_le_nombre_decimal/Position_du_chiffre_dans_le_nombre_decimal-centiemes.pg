###########################################################################


DOCUMENT();
loadMacros(
  "PGstandard.pl",
);

TEXT(beginproblem());


$entier=random(100,999);
$dec1=random(0,9);
$dec2=random(0,9);
$dec3=random(1,9);
$nombre=($entier.".".$dec1.$dec2.$dec3);

$reponse=$dec2;

BEGIN_TEXT
<table cellpadding="10px" width="850px">
  <tr><td>

<h1>Question : </h1>
<br/>Quel chiffre repr&eacute;sente les centi&egrave;mes dans le nombre &nbsp; $nombre &nbsp;?<br/>

\{ans_rule(10)\}<br/>
  </td></tr>
</table>
END_TEXT



BEGIN_HINT
<script>
function hint(hint){
var text ="";
var hintName =hint.name;
switch(hintName){
case '1':text=" Les positions finissant par le suffixe aine repr&eacute;sentent une position d'un entier (un chiffre &agrave; la gauche du point d&eacute;cimal) dans un nombre d&eacute;cimal alors que celles finissant par le suffixe i&egrave;me repr&eacute;sentent une position d'une d&eacute;cimale (un chiffre &agrave; la droite du point d&eacute;cimal) dans un nombre d&eacute;cimal. ";
break;
case '2':text=" Les 6 principales positions d'un nombre d&eacute;cimal sont:  centaine dizaine unit&eacute; . dizi&egrave;me centi&egrave;me milli&egrave;me ";
break;
case '3':text="Consulter la th&eacute;orie sur le sujet au site web suivant: <a target=_blank href=http://math.cchic.ca/decimales/definition>http://math.cchic.ca</a>.";
break;
default:text=""
}document.getElementById("hintspace").style.display='block';
document.getElementById("hinttext").innerHTML=text;
document.getElementById("hintName").innerHTML="Astuce "+hintName;
}
function resetHint(){document.getElementById("hintspace").style.display='none';document.getElementById("hinttext").innerHTML="";}
</script>

<button type="button" name="1" onclick="hint(this)">Astuce 1</button>&nbsp;
<button type="button" name="2" onclick="hint(this)">Astuce 2</button>&nbsp;
<button type="button" name="3" onclick="hint(this)">Astuce 3</button>&nbsp;
<div id="hintspace" style="width:800px;display:none;border:1px solid darkblue;">
<table width="100%" border="0" cellspacing="0">
  <tr style="background-color:#8888dd;">
    <td valign="top" align="left"  width="50%">
      <text id="hintName" style="color:white;padding-left:15px;"></text>
    </td>
    <td valign="top" align="right" width="50%">
      <text style="color:white;cursor:pointer; padding-right:5px;" onclick="resetHint()" >Fermer [x]</text>
    </td>
  </tr>
  <tr style="background-color:#b0c4de;">
    <td id="hinttext" colspan="2"style="color:black;padding:15px;"></td>
  </tr>
</table>
</div>
END_HINT

ANS(strict_num_cmp($reponse, .0));


BEGIN_SOLUTION

$PAR <U>Solution</U> $PAR

$entier.$dec1<strong>$dec2</strong>$dec3 = c'est le chiffre <strong>$reponse</strong> qui occupe les centi&egrave;mes dans ce nombre
<br/>
(les centi&egrave;mes repr&eacute;sentent la deuxi&egrave;me position &agrave; la droite du point d&eacute;cimal, juste apr&egrave;s les dixi&egrave;mes)

END_SOLUTION

ENDDOCUMENT();
