# créer les valeurs de l'équation
$a = random(2,10);

do {
  $b=random(2,10);
  $c=random(2,10);
} until ($c > $b);

# déclarer la lettre qui sera la variable non-définie (variable réelle) dans la question
Context()->variables->are(x=>"Real");
$lettre="x";


# déterminer les autres éléments requis pour la solution
$cmoinsb = $c - $b;
$cmoinsbcarre=$cmoinsb*$cmoinsb;

$gcd=gcd($cmoinsbcarre,$a);
if ($gcd !=1) {$gnum=$cmoinsbcarre/$gcd; $gdenum=$a/$gcd;}
else {$gnum=$cmoinsbcarre; $gdenum=$a;}

if ($gdenum == 1) { $reponse=$gnum;}
else { $reponse="$gnum/$gdenum";}




