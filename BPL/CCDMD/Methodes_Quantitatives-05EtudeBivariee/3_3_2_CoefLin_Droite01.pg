$SommeXYTemp3 = Compute("$Y01VecteurBaseDonnee[$Sommei]"); 
$SommeXYTemp2 = Compute("($SommeXYTemp3) * ($SommeXYTemp4) + $SommeXYTemp1");
$SommeXYTemp1 = $SommeXYTemp2;
$Sommei++}
 while ($Sommei<$n);
