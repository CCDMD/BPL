#Bloc 2
@ListeAffichage2A = ("f(x) = $f4A","g(x) = $f5A","h(x) = $f6A","g(t) = $f7A");
@ListeAffichage2B = ("f'($a4) = ","g'($a5) = ","h'($a6) = ","g'($a7) = " );
@RepAffichage2 = ($RepDD4,$RepDD5,$RepDD6,$RepDD7);
