#Bloc 3
@ListeAffichage3A = ("f(x) = $f8A","f(x) = $f9A","h(t) = $f10A","g(x) = $f11A", "f(x) = $f12A, \rm{ avec \ } \it{ p, q, r }\in \mathbb{R}^* ");
@ListeAffichage3B = ("f'($a8) = ","f'($a9) = ","h'($a10) = ","g'($a11) = ","f'($a12) = " );
@RepAffichage3 = ($RepDD8,$RepDD9,$RepDD10,$RepDD11,$RepDD12);
@R3 = shuffle(5);

