DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
);


TEXT(beginproblem());

# créer les valeurs des coefficients et constantes
$cte1=random(2,6);

$a=random(1,3);
$b=random(3,5);
$c= random(5,7);
$d=random(7,9);

# déclarer la lettre qui seront la variable non-définie (variable réelle)
Context()->variables->are(x=>"Real");
$x="x";

# créer les valeurs intermédiaires
$cte1foisd=$cte1*$d;
$dcarre=$d*$d;
$aplusc=$a+$c;
$afoisc=$a*$c;
$aplusb=$a+$b;
$afoisb=$a*$b;

# créer le signe dans l'équation
$choix=random(0,1);
if ($choix==0) {$signe = "+";}
else {$signe="-";}


# créer la réponse
$reponse=Formula("(   (($cte1)*($x $signe $b))/(($x $signe $c)*($x-$d))    )");        



BEGIN_TEXT
<h1>Question:</h1><br/>
Effectuer l'opération suivante:  <br/>
<br/><br/>
\(  \dfrac{$cte1 + $cte1foisd$x}{$x^2 $signe $aplusc$x + $afoisc} \times  \dfrac{$x^2 $signe $aplusb$x + $afoisb}{$x^2 -$dcarre}  \)
<br/><br/>

\{ans_rule(20)\} 

<br/><br/>
Note: utiliser la barre oblique / pour séparer le numérateur du dénominateur d'une fraction.

END_TEXT


BEGIN_HINT
<script>
