DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
Context()->noreduce('(-x)-y','(-x)+y');


$a=random(1,10,1)*random(-1,1,2);
$b=random(1,10,1)*random(-1,1,2);

# Bornes
$c=random(-5,-1);
$d=random(1,5);

$f = Compute("$a*x + $b*|x|")->reduce;

Context()->texStrings;
BEGIN_TEXT
Évaluer l'intégrale
\[\int_{$c}^{\,$d} {($f)}\,dx\]

$PAR
Réponse : \{ans_rule(30)\}

END_TEXT
Context()->normalStrings;

$ans = Compute("$b*$c*$c");

ANS($ans->cmp);

ENDDOCUMENT();
