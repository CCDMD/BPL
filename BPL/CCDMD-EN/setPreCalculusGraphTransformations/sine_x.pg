END_TEXT
Context()->normalStrings;

ANS($vSSPop->cmp());
ANS($vSSans->cmp());

ANS($hSSPop->cmp());
ANS($hSSans->cmp());

ANS($amplitude->cmp);
ANS($period->cmp);

Context()->strings->add(A=>{}, B=>{}, C=>{}, D=>{});
ANS(String($ansS2)->cmp());

Section::End();

