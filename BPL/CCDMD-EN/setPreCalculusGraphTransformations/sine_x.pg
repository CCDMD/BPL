## Author('MC Bonneau')
## Institution('Cegep Heritage College')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGML.pl",
  "PGgraphmacros.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl",
  "contextFraction.pl",
  "parserPopUp.pl",
  "PGunion.pl",
  "scaffold.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################################################################
# setup contexts and variables 
###########################################################################

Context("Numeric");

$r=non_zero_random(-6,6,1);
do {$a=non_zero_random(-6,6,1);} until ($a != 1 && $a != -1);
 $vSSPop = PopUp(["select", "stretched vertically", "compressed vertically"], "stretched vertically");
$vSSans = Compute("abs($a)");

$b1 = random(2,6,1);

Context("Fraction-NoDecimals");
$hSS = random(0,1,1); # 0 - stretch, 1 - compress
if ($hSS == 0) 
{
    $bnum = 1;
    $bden = $b1;
    $hSSPop = PopUp(["select", "stretched horizontally", "compressed horizontally"], "stretched horizontally")
} 
else 
{
    $bnum = $b1;
    $bden = 1;
    $hSSPop = PopUp(["select", "stretched horizontally", "compressed horizontally"], "compressed horizontally")
}
$b = Fraction($bnum,$bden);
$hSSans = abs($b);

$c = $r*$b;

$d = non_zero_random(-6,6,1);

Context()->noreduce('(-x)-y');
Context()->noreduce('(-x)+y');

$origfun = Compute("sin(x)");
if($hSS == 0)
{
    $dispfunshown = Compute("$a sin( x/$b1 - pi/$r) + $d")->reduce;
}
else
{
    $dispfunshown = Compute("$a sin( $b x - pi/$r) + $d")->reduce;
}
$dispfun = Compute("$a sin( $b (x - pi/$c)) + $d")->reduce;
$fun1 = Compute("$vSSans sin($b x)")->reduce;
$fun2 = Compute("$a sin($b x)")->reduce;
$fun3 = Compute("$a sin( $b (x - pi/$c))")->reduce;
$fun4 = $dispfun;

###########################################

Context()->texStrings;
BEGIN_TEXT
$BBOLD Question $EBOLD $BR $BR
Sketch the graph of \( \displaystyle g(x) = $dispfunshown \)
by using graph transformation.
$BR $BR
$HR $HR
$BBOLD Solution $EBOLD $BR $BR

END_TEXT
Context()->normalStrings;

###########################################
#  The scaffold
Scaffold::Begin();

###########################################
Section::Begin("Rewriting \(g(x)\)");

Context()->texStrings;
BEGIN_TEXT
\(\displaystyle g(x) = $dispfunshown\) can be rewritten as \(g(x) = a \sin\Big( b(x-c) \Big)+d\) $BR 
where $BR $BR 
\(\quad a = \) \{ans_rule(5)\} $BR $BR
\(\quad b = \) \{ans_rule(5)\} $BR $BR
\(\quad c = \) \{ans_rule(5)\} $BR $BR
\(\quad d = \) \{ans_rule(5)\} $BR $BR

END_TEXT
Context()->normalStrings;

Context()->operators->undefine('*','+','-');

ANS(Compute("$a")->cmp);
ANS(Compute("$b")->cmp);
ANS(Compute("pi/$c")->cmp);
ANS(Compute("$d")->cmp);

Section::End();

