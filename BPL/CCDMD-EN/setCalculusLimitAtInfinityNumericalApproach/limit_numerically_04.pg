Enter $BBOLD -INF $EBOLD for \(-\infty\).$BR


END_TEXT
Context()->normalStrings;

#inf
ANS($ans_if1->cmp);
ANS($ans_if2->cmp);
ANS($ans_if3->cmp);
ANS($ans_if4->cmp);

ANS(Compute("$b")->cmp);

#-inf
ANS($ans_mif1->cmp);
ANS($ans_mif2->cmp);
ANS($ans_mif3->cmp);
ANS($ans_mif4->cmp);

ANS(Compute("$b")->cmp);


ENDDOCUMENT();        # This should be the last executable line in the problem.
