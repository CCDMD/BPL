DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGunion.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers=1;

do{
$a = random(1,9,1);
$b = random(1,9,1);
}until($b != $a);

$exp = random(2,8,2);

$aT = $a;

Context("Numeric");
Context()->strings->add(UND=>{});
$f = Compute("$b");
$g = Compute("(x-$a)^$exp");
$equation = $f/$g;

$x_right = "$aT+";
$zero_right1 = "0+";
$zero_right2 = "0+";
$ans_right = "INF";

$x_left = "$aT-";
$zero_left1 = "0-";
$zero_left2 = "0+";
$ans_left = "INF";

$answer = "INF";
$popLimit = PopUp(["Choose", "equal", "not equal"],"equal");

Context()->texStrings;
