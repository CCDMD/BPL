DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

Context('Numeric');

# The student cannot use trig functions in the answer.
# See end of setup section

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context()->strings->add(nep=>{}, dne => {alias => "nep"} );


###################
#
#  Setup

### angles sont des multiples de 45°
$n1 = non_zero_random(-7,8);
($n,$d) = reduce($n1,4);

$a1 = Formula("$n* pi/$d")->reduce;
$sin = Real("sin($a1)");
$cos = Real("cos($a1)");

if( $cos == 0 ){
$tan = Compute("nep");
$sec = Compute("nep");
} else {
$tan = Real("tan($a1)");
$sec = Real("sec($a1)");
}

if( $sin == 0 ){
$cot = Compute("nep");
$csc = Compute("nep");
} else {
$cot = Real("cot($a1)");
$csc = Real("csc($a1)");
}


# Set context for student answers

Context()->functions->disable("Trig");
Parser::Number::NoDecimals(Context());      # this just eliminated decimals

###################
#
#  Text

Context()->texStrings;
BEGIN_TEXT
