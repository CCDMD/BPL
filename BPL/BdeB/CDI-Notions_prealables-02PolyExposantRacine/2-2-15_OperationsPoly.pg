DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomialFr.pl",
#  "CofIdaho_macrosFr.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

######################################
#  Setup

Context("LimitedPolynomial-Strict");
Context()->variables->are(x=>'Real',y=>'Real');

$a= non_zero_random(-4,4,1);
$b= non_zero_random(-6,6,1); 

$mx= random(2,8,1);
$nx= random(2,5,1);
$my= random(2,8,1);
$ny= random(2,5,1);

$poly1 = Formula("$a x^$mx y^$my")->TeX;
$poly2 = Formula("$b x^$nx y^$ny")->reduce->TeX;

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Effectuer la multiplication de monômes suivante. 
$PAR $BR
 \( ( $poly1 ) ( $poly2 ) = \) \{ ans_rule(20) \}  \{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;

######################################
#  Answer

$c = $a*$b;
($xe,$ye) = ($mx+$nx,$my+$ny);
$ans = Formula("$c * x^$xe * y^$ye")->reduce;
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################

Context()->texStrings;
BEGIN_SOLUTION
$PAR
\[  \begin{array}{rl} ( $poly1 ) ( $poly2 ) 
&= ($a \times $b) x^{$mx + $nx} y^{$my + $ny}   \\
&=  $ans \end{array}
\] 

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();


























