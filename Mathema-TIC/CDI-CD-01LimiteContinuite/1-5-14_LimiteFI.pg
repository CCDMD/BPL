DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned answer blanks
#  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");

$a1 = random(2,11,1);
$b1 = random(2,11,1);
$c1 = random(2,11,1);
$d1 = random(2,11,1);
$e1 = random(2,11,1);
$f1 = random(2,11,1);

$ans = Compute("-$a1/$f1");

$f = Formula("$a1 x^3 - $b1 x^2 - $c1 x");
$g = Formula("$d1 - $e1 x - $f1 x^3");
$f_over_g = ($f/$g)->reduce;

###################################
#  Use an alignment to present the questions and answer rules
###################################

Context()->texStrings;
$alignment = new_aligned_list(
   equals => 1, ans_rule_len => 20, numbered => 1,
   row_spacing => 5, tex_spacing => "5pt"
);
$alignment->qa(
  "\(\displaystyle\lim_{x\to\infty}  $f_over_g\)", $ans->cmp,
  "\(\displaystyle\lim_{x\to-\infty} $f_over_g\)", $ans->cmp,
);
Context()->normalStrings;

###################################
# Main text

BEGIN_TEXT
Évaluer les limites suivantes.
\{$alignment->print_q\}
$PAR
$BITALIC Au besoin, entrer ${BBOLD}inf$EBOLD pour \( \infty \) et ${BBOLD}-inf$EBOLD  pour \( -\infty \).$EITALIC 
END_TEXT

###################################
# Answer checking

$showPartialCorrectAnswers = 0;
install_problem_grader(~~&std_problem_grader); 

ANS($alignment->correct_ans);

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
